<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grableapp.SignInActivity"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/loginandsignupfinal"

            >


                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="57dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="277dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginBottom="395dp"
                    android:background="@drawable/input_field"
                    android:fontFamily="sans-serif"
                    android:hint="Email Adress"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="15dp"
                    android:textColorHighlight="#000"
                    android:textColorHint="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="57dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="358dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="312dp"
                    android:background="@drawable/input_field"
                    android:fontFamily="sans-serif"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textCursorDrawable="@null"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="59dp"
                    android:layout_marginLeft="59dp"
                    android:layout_marginTop="449dp"
                    android:layout_marginEnd="234dp"
                    android:layout_marginRight="234dp"
                    android:layout_marginBottom="234dp"
                    android:background="@drawable/loginbutton"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="#9370DB"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_alignStart="@+id/buttonLogin"
                    android:layout_alignLeft="@+id/buttonLogin"
                    android:layout_alignBottom="@+id/buttonLogin"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="208dp"
                    android:layout_marginLeft="208dp"
                    android:layout_marginTop="462dp"
                    android:layout_marginEnd="29dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="-18dp"
                    android:text="Need Help?"
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="41dp"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="631dp"
                    android:layout_marginEnd="130dp"
                    android:layout_marginRight="130dp"
                    android:layout_marginBottom="40dp"
                    android:text="You are not a member?"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="183dp"
                    android:layout_marginEnd="82dp"
                    android:layout_marginRight="82dp"
                    android:layout_marginBottom="471dp"
                    app:srcCompat="@drawable/hellothere" />

                <TextView
                    android:id="@+id/textViewSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="255dp"
                    android:layout_marginLeft="255dp"
                    android:layout_marginTop="631dp"
                    android:layout_marginEnd="81dp"
                    android:layout_marginRight="81dp"
                    android:layout_marginBottom="39dp"
                    android:text="Register"
                    android:textColor="#45064A"
                    android:textSize="20dp" />


        </RelativeLayout>


</LinearLayout>