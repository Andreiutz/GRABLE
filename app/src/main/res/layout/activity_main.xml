<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:src="@drawable/grablelogobackground"/>


    <Button
        android:id="@+id/shop_btn"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="77dp"
        android:background="@drawable/startshoppingbutton"
        android:text="Start Shopping!"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"/>





    <ImageView
        android:id="@+id/settingsdots"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/settingsdots"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/oferrsbutton"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="653dp"
        android:layout_marginRight="121dp"
        android:background="@drawable/offers_button"
        android:text="Offers"
        android:textColor="#9370DB"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>